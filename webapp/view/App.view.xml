							</items>
						</FlexBox>
						<FlexBox justifyContent="Center" alignItems="Start" >
						<Panel id="checboxpanel" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region" visible="false">
							<content>
						<CheckBox
						    id = "check18"
							text="18+"
							select="onCheckbox"
						/>
						<CheckBox id = "check45" text="45+" select="onCheckbox"/>
						<CheckBox id = "checkcovishield" text="Covishield" select="onCheckbox"/>
						<CheckBox id = "checkcovaxin" text="Covaxin" select="onCheckbox"/>
						<CheckBox id = "checksputnik" text="Sputnik V" select="onCheckbox"/>
						<CheckBox id = "checkfree" text="Free" select="onCheckbox"/>
						<CheckBox id = "checkpaid" text="Paid" select="onCheckbox"/>
				</content>
			</Panel>
